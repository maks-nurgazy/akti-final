{% extends 'base.html.twig' %}

{% block title %}Truck{% endblock %}

{% block content %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ product.data|date("m/d/Y") }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('product_list') }}">
        <input type="submit" class="btn" value="Back to list" />
    </form>
    <br>
    <form action="{{ path('product_update', {'id': product.id}) }}" method="post">
        <input type="submit" class="btn" value="Update" />
    </form>
    <br>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
